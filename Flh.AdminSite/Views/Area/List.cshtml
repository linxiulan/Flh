@model Flh.AdminSite.Models.Classes.ListModel
@{
    ViewBag.Title = "地区列表";
    Layout = "../Layout/_Manager.cshtml";
}
当前分类：@Model.ParentFullName <a class="btn btn-default" href="@Url.Action("batchadd", new { pno = Model.ParentNo })" target="_blank">批量添加</a>
<table class="common-list">
    <thead>
        <tr>
            <th>地区编号</th>
            <th>地区名称</th>
            <th>地区排序</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.No</td>
                <td>@item.Name</td>
                <td>@item.Order</td>
                <td>
                    <a class="btn btn-default" href="@Url.Action("edit", new { no = item.No })" target="_blank">修改</a>
                    <a class="btn btn-default" href="@Url.Action("list", new { pno = item.No })" target="_blank">下级地区列表</a>
                    <a class="btn btn-default" href="@Url.Action("batchadd", new { pno = item.No })" target="_blank">批量添加</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="page">
    @Html.Pager(Model.Items);
</div>