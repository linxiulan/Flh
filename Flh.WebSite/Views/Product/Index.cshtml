@model Flh.WebSite.Models.Product.ListModel
@{
    ViewBag.Title = "产品列表";
    Layout = "~/Views/Layout/_header.cshtml";
}
<link href="/Resources/css/default.css" rel="stylesheet" />
@*<form>
        <input type="text" name="kw" value="@Model.Keyword" />
        <button type="submit">搜索</button>
    </form>*@
<div class="flh-productList layout-width">
    <div class="flh-productList-left">
        <div class="flh-productList-breadCrumbs"><a href="javascript:;">首页</a> &gt; <a href="javascript:;">面料</a> &gt; 涤纶丝</div>
        <div class="flh-productList-classification">
            <ul>
                <li class="current"><a href="javascript:;">所有面料</a></li>
                @foreach (var item in Model.ClassItems)
                {
                    <li><a href="/Product?no=@item.No">@item.Name</a></li>
                }
            </ul>
        </div>
    </div>
    <div class="flh-productList-right">
        <div class="flh-productList-condition">
            <a class="condition-switch current" href="javascript:;">最新</a>
            <a class="condition-switch" href="javascript:;">人气</a>
            <a class="condition-switch" href="javascript:;">销量</a>
            <a class="condition-switch" href="javascript:;">价格</a>
            <div class="flh-productList-price">
                价格：&nbsp;&yen;&nbsp;<span><input type="text" value="" /></span>&nbsp;--&nbsp;&yen;&nbsp;<span><input type="text" value="" /></span>
            </div>
            <a class="condition-submit" href="javascript:;">确定</a>
        </div>
        <div class="flh-productList-main">
            <div class="flh-productList-main-filter">
                <div class="filter-left">
                    <span>颜色：</span>
                    <a href="javascript:;">多色</a>
                    <a href="javascript:;">黑色</a>
                    <a href="javascript:;">白色</a>
                    <a href="javascript:;">蓝色</a>
                    <a href="javascript:;">粉色</a>
                    <a href="javascript:;">宝蓝</a>
                    <a href="javascript:;">多色</a>
                </div>
                <div class="filter-right">
                    <a href="javascript:;">更多&nbsp;&gt;</a>
                </div>
            </div>
            <ul>
                @foreach (var item in Model.Items)
                {
                    <li>
                        <a href="javascript:;"><img src="@item.Image" alt="@item.Name" /></a>
                        <div class="productList-main-name"><span>产品名称：</span><a href="javascript:;">@item.Name</a></div>
                        <div class="productList-main-Attributes">
                            <div class="Attributes-list">
                                尺寸：@item.Size
                            </div>
                            <div class="Attributes-list">
                                颜色：@item.Color
                            </div>
                            <div class="Attributes-list">
                                材质：@item.Material
                            </div>
                        </div>
                    </li>
                }
                <div class="clear"></div>
            </ul>
            <div class="page">
                @Html.Pager(Model.Items)
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>
