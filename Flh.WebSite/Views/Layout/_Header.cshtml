@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="/Resources/css/header.css" rel="stylesheet" />
</head>
<body>
    <script src="/Resources/Js/jQuery-3.1.0.min.js"></script>
    <div class="flh-layout">
        <div class="flh-layout-header">
            <div class="flh-header-top">
                <div class="flh-header-userInfo">
                    @if (this.Session.GetCurrentUser() != null)
                    {
                        <span>欢迎你：</span>@(this.Session.GetCurrentUser().Name)
                        <a href="@Url.Action("logout", "account")">退出</a>
                    }
                    else
                    {   <span>您好，欢迎来到辅料汇！</span>
                        <a class="flh-header-login" href="@Url.Action("login", "account")">登录</a>
                        <a class="flh-header-register" href="@Url.Action("register", "account")">免费注册</a>
                    }
                </div>
            </div>
            <div class="flh-header-main">
                <div class="flh-header-main-left">
                    <a href="javascript:;">
                        <img src="#" alt="辅料汇" />
                    </a>
                </div>
                <div class="flh-header-main-middle">
                    <input type="text" name="flh-search" value="@(Request.QueryString["kw"])" />
                    <a href="javascript:;">搜索</a>
                </div>
                <div class="flh-header-main-right">
                    <div class="flh-header-main-ewm">
                        欢迎来到xxxx.com
                        <img src="#" alt="二维码" />
                    </div>
                </div>
            </div>
            @*<div class="flh-header-nav" >
                <ul>
                    <li>
                        <a href="@Url.Action("index", "home")" @(Url.IsCurrent("index", "home") ? "class=\"current\"" : String.Empty)>首页</a>
                    </li>
                    <div class="clear"></div>
                </ul>
            </div>*@
        </div>
        @RenderBody()
        <div class="flh-layout-footer" style="display:none;">
            <div class="flh-footer-main">
                <div class="flh-footer-main-left">
                    <div class="flh-footer-main-title">
                        找货、询价、订货相关联系方式
                    </div>
                    <div class="flh-footer-main-content">
                        <p style="padding-top:30px;">电话：020-2235654</p>
                        <p>传真：020-2235654</p>
                        <p>邮件：cs@fuliaohui.com</p>
                        <p>投诉及建议：claim@fuliaohui.com</p>
                    </div>
                    <div class="flh-footer-main-btn">
                        <a href="javascript:;"></a>
                    </div>
                </div>
                <div class="flh-footer-main-right">
                    <div class="flh-footer-main-title">
                        商品技术问题相关
                    </div>
                    <div class="flh-footer-main-content">
                        <p style="line-height:210px;">我们的专业技术人员会向你提供帮助。</p>
                    </div>
                    <div class="flh-footer-main-btn">
                        <a href="javascript:;"></a>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="flh-footer-bottom">
                <span>©2016 辅料汇版权所有</span><span>ICP证：粤ICP证030173号</span>  
            </div>
        </div>
    </div>
